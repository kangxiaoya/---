.container(style="float:left;margin-top:10px;padding-left:50px" )
  .row
    %h1
      活动通
-if current_user
  %br
  .text-right(style="float:right;margin-top:10px;padding-right:30px" )
    你好,
    =current_user.name
    =link_to "退出",logout_path,method: "delete"
    %br
-if current_user[:admin]=='admin'
  .panel-default(style="margin:0 auto;height:10px;margin-top:100px;margin-left:30px;margin-right:30px" )
    .panel-heading
      %h3.panel-title
        用户管理
    .panel-body(style="padding-bottom:0px;padding-top:0px" )
    %table.table
      %thead
        %tr
          %th 编号
          %th 用户名
          %th
            %th 操作
      %tbody
        -@users.each do|user|
          %tr
            %td
              =user.id-29
            %td
              =user.name
            %td
              =link_to"删除"
              %td
                =link_to"修改密码"
      %tfoot
      =will_paginate @users,:next_label => '>>',:prev_label => '<<'