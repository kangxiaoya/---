.container(style="margin:10px 50px" )
  .row
    %h1
      活动通
    .row(style="width:1320px" )
      .sign_up-box
        %h4 用户登录
        .text-right
          =link_to"用户注册",signup_path
        %br
        =form_tag "/create_login_session" do
          .input-group
            %span.input-group-addon(style="padding-bottom:2px;padding-top:1.7px")
              账号
            = text_field_tag :name, params[:name], :class=>'form-control'
          %br
          .input-group
            %span.input-group-addon(style="padding-bottom:2px;padding-top:1.7px")
              密码
            = password_field_tag :password, params[:password], :class=>'form-control'
          %br
          - if flash[:error]
            .alert.alert-danger(class='text-center'style="float:center;padding-top:0px;padding-bottom:0px;padding-left:90px;padding-right:90px;margin-bottom:0px" )
              = flash[:error]
          %br
          .text-right
            =link_to"忘记密码"
          %br
          = submit_tag "登录",:class => ' btn-info',:style=>' width:116px;margin-right:147px;margin-left:147px'
