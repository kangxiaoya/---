.container(style="margin:10px 50px" )
  .row
    %h1
      活动通
  .row(style="width:1320px" )
    .sign_up-box
      %h4 用户登录
      .text-right
        =link_to"用户注册",signup_path
      %br
        .input-group
          %span.input-group-addon(style="padding-bottom:2px;padding-top:1.7px")
            帐号
          %input(style="text;width:287px" )
        %br
        .input-group
          %span.input-group-addon(style="padding-bottom:2px;padding-top:1.7px")
            密码
          %input(style="text;width:287px" )
        .text-right
          =link_to"忘记密码"
      .text-center
        %btn(class="btn btn-info" style="width:150px;padding-bottom:3px;padding-top:3px")
          登录

