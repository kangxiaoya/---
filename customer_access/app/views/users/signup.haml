.container(style="margin:10px 50px" )
  .row
    %h1
      活动通
  .row(style="width:1320px" )
    .sign-up-box
      .text-left
      %h4 新用户注册
      .text-right
        =link_to"用户登录" ,login_path
      %br
      = form_for @user do |f|
        .input-prepend
          %span.add-on(style="width:84px;96px" )
            帐号
          = f.text_field :name, :class=>'form-control',:style=>'width:342px;'
        .input-prepend
          %span.add-on(style="width:84px;96px")
            请设置密码
          = f.password_field :password, :class=>'form-control',:style=>'width:342px;'
        .input-prepend
          %span.add-on(style="width:84px;96px")
            请确认密码
          = f.password_field :password_confirmation, :class=>'form-control',:style=>'width:342px;'
        .input-prepend
          %span.add-on(style="width:84px;96px" )
            忘记密码问题
          = f.text_field :forget_password_question, :class=>'form-control',:style=>'width:342px;'
        .input-prepend
          %span.add-on(style="width:84px;96px" )
            忘记密码答案
          = f.text_field :question_answer, :class=>'form-control',:style=>'width:342px;'
        %br
        - if @user.errors.any?
          .alert.alert-danger
            =@user.errors.full_messages.first
        %br
        =f.submit '注册',:class => 'btn-local',:style=>'width:20%'

